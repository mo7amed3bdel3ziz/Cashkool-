<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"

        android:layout_marginEnd="6dp"

        android:layout_marginBottom="2dp"
        android:padding="6dp"
        app:cardCornerRadius="8dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_u"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageup"
                android:layout_width="46dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_u"
                app:layout_constraintEnd_toEndOf="@+id/image_u"
                app:layout_constraintStart_toStartOf="@+id/image_u"
                app:layout_constraintTop_toTopOf="@+id/image_u"
                app:srcCompat="@drawable/up" />


            <TextView
                android:id="@+id/description_Transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="غير معروف "
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/image_u"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/_1_h_ago"
                app:layout_constraintStart_toEndOf="@+id/image_u"
                app:layout_constraintTop_toBottomOf="@+id/description_Transaction" />

            <TextView
                android:id="@+id/monyUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:text="10 $"
                android:textColor="#17BF12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Debit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="@string/Debit"
                android:textColor="#65121010"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monyDown" />

            <TextView
                android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"

                android:gravity="center"
                android:text="@string/Credit"
                android:textColor="#65121010"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monyUp" />

            <ImageView
                android:id="@+id/imageDown"
                android:layout_width="46dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_u"
                app:layout_constraintEnd_toEndOf="@+id/image_u"
                app:layout_constraintStart_toStartOf="@+id/image_u"
                app:layout_constraintTop_toTopOf="@+id/image_u"
                app:srcCompat="@drawable/dow" />

            <TextView
                android:id="@+id/monyDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="24dp"
                android:text="10 $"
                android:textColor="#DC0F0F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>