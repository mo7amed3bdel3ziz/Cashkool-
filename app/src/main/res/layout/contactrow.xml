<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rows"
    android:layout_marginTop="6dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    app:cardCornerRadius="10dp"
    android:layout_height="90dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#0F1E8C45"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/namerow"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="#43040303"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_u"

                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/circlshap"
                app:layout_constraintBottom_toTopOf="@+id/namerow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_d"

                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/circ2shap"
                app:layout_constraintBottom_toTopOf="@+id/namerow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/description_Transaction"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:text="بيع منتجات تجميل "
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/namerow"
                app:layout_constraintStart_toEndOf="@+id/image_u"
                app:layout_constraintTop_toBottomOf="@+id/date_pay" />

            <TextView
                android:id="@+id/mony_one_Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"

                android:text=" 50 ج.م"
                android:textColor="#A9F11515"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CostID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@id/mony_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/mony_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text=" 5 ج.م"
                android:textColor="#CB4CAF50"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
        android:id="@+id/imagedp"
        android:layout_width="28dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_u"
        app:layout_constraintEnd_toEndOf="@+id/image_u"
        app:layout_constraintStart_toStartOf="@+id/image_u"
        app:layout_constraintTop_toTopOf="@+id/image_u"
        app:srcCompat="@drawable/downarr" />

            <ImageView
                android:id="@+id/imageup"
                android:layout_width="29dp"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/image_u"
                app:layout_constraintEnd_toEndOf="@+id/image_u"
                app:layout_constraintStart_toStartOf="@+id/image_u"
                app:layout_constraintTop_toTopOf="@+id/image_u"
                app:srcCompat="@drawable/upup" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/date_pay"
                android:text="@string/date_of_pay"
                app:layout_constraintEnd_toEndOf="@id/date_pay"/>

            <TextView
                android:id="@+id/date_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="2/5/2020"
                android:textColor="#474545"
                app:layout_constraintStart_toEndOf="@+id/image_u"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>